{
  "name": "Context Currency Converter",
  "description": "Adds currency conversion to the context menu",
  "version": "0.2",
  "permissions": ["contextMenus", "storage", "notifications", "clipboardWrite"],
  "background": {
    "scripts": ["currencies.js", "background.js"]
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "manifest_version": 2,
  "options_page": "options.html",
  "icons": {
   "16": "icon16.png",
   "48": "icon48.png",
  "128": "icon128.png"
 }
}
